import random
import re
import time

arrayofusernames = []
arrayofpasswords = []

arrayofsongs = []
arrayofartists = []

def usernamePassword(arrayofusernames, arrayofpasswords):
    fileofusername = open("UsernamesAndPasswords.txt", "r")

    for line in fileofusername:
        a = line.split(",")
        arrayofusernames.append(a[0])

        b = a[1]
        arrayofpasswords.append(b.stip())

    return arrayofusernames
    return arrayofpasswords


usernamePassword(arrayofusernames, arrayofpasswords)

def checkLogin(arrayofusernames, arrayofpasswords):
    uua = input("Enter your username :   ")
    upa = input("Enter your password :   ")
    if uua not in arrayofusernames or upa not in arrayofpasswords:
        print("Incorrect username or password.")
    else:
        uuaI = arrayofusernames.index(uua)
        upaI = arrayofpasswords.index(upa)






print(arrayofusernames)
