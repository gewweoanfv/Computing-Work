import random
import re
import time

arrayofusernames = []
arrayofpasswords = []

arrayofsongs = []
arrayofartists = []

uuaI = 0
upaI = 0

def usernamePassword(arrayofusernames, arrayofpasswords):
    fileofusername = open("UsernamesAndPasswords.txt", "r")

    for line in fileofusername:
        a = line.split(",")
        arrayofusernames.append(a[0])

        b = a[1]
        arrayofpasswords.append(b.strip())

    return arrayofusernames
    return arrayofpasswords


usernamePassword(arrayofusernames, arrayofpasswords)

def checkLogin(arrayofusernames, arrayofpasswords, uuaI, upaI):
    uui = input("Enter your username:   ")
    upi = input("Enter your password:   ")
    if uui not in arrayofusernames or upi not in arrayofpasswords:
        print("Incorrect username or password.")
    else:
        uuiI = arrayofusernames.index(uui)
        upiI = arrayofpasswords.index(upi)
    if uuaI != upaI:
        print("Incorrect username or password.")
    else:
        print(f"Welcome {uui}")


    return uuiI
    return upiI

checkLogin(arrayofusernames, arrayofpasswords, uuaI, upaI)


print(f"username index is {uuaI}")
print(f"password index is {upaI}")